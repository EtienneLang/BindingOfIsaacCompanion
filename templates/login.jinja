{% extends "base.jinja" %}
{% block title %}BoI Companion{% endblock %}
{% block scripts %}
    <script src="/static/js/account.js" defer></script>
    <script src="/static/js/utils.js" defer></script>
{% endblock %}
{% block contenu %}
<form action="/account/login" method="POST">
    <div class="row text-black">
        <div class="form-group">
             <label for="input_courriel">Email</label>
            <input type="email" name="courriel" id="input_courriel" class="form-control">
        </div>
        <div class="form-group">
            <label for="input_mdp">Password</label>
            <input class="form-control" type="password" name="mdp" id="input_mdp" >
        </div>
        <p>{{ invalidation }}</p>
    </div>

    <div class="d-flex justify-content-center">
         <input type="submit" class="button btn-primary my-3" value="Login">
    </div>
    <a href="http://127.0.0.1:5000/account/create_account" class="text-center">Click here to create an account</a>
</form>


{% endblock %}

